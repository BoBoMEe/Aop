<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/aop_checker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AOP_Checker1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/aop_checker2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AOP_Checker2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aop_checker1" />

    <Button
        android:id="@+id/aop_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AOP_Toast"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aop_checker2" />

</androidx.constraintlayout.widget.ConstraintLayout>